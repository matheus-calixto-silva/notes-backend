{
  "name": "notes-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "prepare": "husky install",
    "commit": "git-cz",
    "build:ui": "rm -rf build && cd ../notes-frontend && yarn build && cp -r dist ../notes-backend && cd ../notes-backend && mv dist build",
    "deploy": "git push heroku main",
    "deploy:full": "yarn build:ui && git add . && git commit -m feat: uibuild && yarn deploy",
    "logs:prod": "heroku logs --tail",
    "lint": "eslint .",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand --forceExit",
    "start:test": "cross-env NODE_ENV=test node index.js",
    "swagger-autogen": "node swagger.js"
  },
  "repository": "https://github.com/matheus-calixto-silva/notes-backend.git",
  "author": "Matheus Calixto <matheuscalixto8@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "babel-eslint": "^10.1.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.4.4",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "swagger-autogen": "^2.22.0",
    "swagger-ui-express": "^4.5.0"
  }
}
